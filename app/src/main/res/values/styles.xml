<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >


    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" >
        <item name="android:textColor">@color/colorPrimary</item>


    </style>



    <style name="points_text" parent="AppTheme">
        <item name="android:textColor">@color/colorPrimary</item>
       <item name="android:paddingTop">4dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingLeft">36dp</item>
        
        <item name="android:textSize">@dimen/points_size</item>

    </style>



    <style name="AppTheme.WebViewActivity" parent="AppTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <style name="navigation_view">

    </style>

    <style name="offline_page_text">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">?android:textAppearanceLarge</item>
    </style>

    <style name="title_text_view">
        <item name="android:gravity">center_horizontal|top</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/title_text</item>
        <item name="android:background">@color/white</item>


    </style>

    <style name="points_cardview">

        <item name="android:foreground">?android:selectableItemBackground</item>
    </style>


    <dimen name="points_size">30sp</dimen>
    <dimen name="title_text" >22sp</dimen>
</resources>
