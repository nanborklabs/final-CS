<?xml version="1.0" encoding="utf-8"?>
<resources>








    <style name="points_text" parent="AppTheme">
    <item name="android:textSize">@dimen/points_size</item>
    <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>



    <style name="offline_page_text" parent="AppTheme">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">?android:textAppearanceLarge</item>
        <item name="android:breakStrategy">high_quality</item>
    </style>






    <style name="title_text_view" parent="AppTheme">
        <item name="android:gravity">center_horizontal|top</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/title_text</item>
        <item name="android:background">@color/white</item>


    </style>

    <style name="points_cardview">
        <item name="android:foreground">@drawable/riplple_effect</item>
    </style>
</resources>














