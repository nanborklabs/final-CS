<resources>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
        <item name="android:elevation">8dp</item>

    </style>

    <style name="points_text" parent="AppTheme">
        <item name="android:textSize">@dimen/points_size</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:elevation">4dp</item>
    </style>
    <style name="navigation_view">
        <item name="android:background">@color/white</item>
        <item name="android:backgroundTintMode">multiply</item>


    </style>

    <style name="offline_page_text">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/no_data_size</item>
        <item name="android:ems">10</item>
    </style>

    <style name="title_text_view">
        <item name="android:gravity">center_horizontal|top</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/title_text</item>
        <item name="android:background">@color/white</item>


    </style>

    <style name="points_cardview">
        <item name="android:foreground">@drawable/riplple_effect</item>
    </style>

    <style name="offline_button">
        <item name="android:foreground">?android:selectableItemBackground</item>
        <item name="android:elevation">6dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>
</resources>
